# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=production
FLASK_DEBUG=0

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/rhiz_db

# Session Security
SESSION_SECRET=your-super-secret-session-key-here-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-minimum-32-characters-long

# OpenAI Integration (Required for AI features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Email Service (Optional - for magic link authentication)
RESEND_API_KEY=re_your-resend-api-key-here

# Payment Processing (Optional - for subscription features)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here

# OAuth Integration (Optional - for social login)
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id-here
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret-here

# Production Configuration
PORT=5000
HOST=0.0.0.0
WORKERS=4

# Development/Testing
REPLIT_DEV_DOMAIN=your-replit-domain.replit.dev